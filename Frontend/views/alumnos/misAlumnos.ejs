<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Alumnos</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
    <style>
        .body-principal {
            background-image: url('/assets/fondoPrincipal.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .titulo {
            font-size: 2rem;
            font-weight: bold;
        }

        .avatar-img {
            width: 70px;
            height: 70px;
            object-fit: cover;
            border-radius: 50%;
        }

        .alumno-card {
            padding: 1rem;
            border-radius: 8px;
            display: flex;
            align-items: center;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .alumno-info {
            margin-left: 1rem;
        }

        .container-transparente {
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 8px;
            padding: 2rem;
        }

        .alumno-col {
            margin-bottom: 1rem;
            padding: 0 0.5rem;
        }

        .navbar {
            height: 100px;
            font-size: 1.3rem;
            font-weight: bold;
            background-color: var(--color-morado) !important;
        }

        #nombreMaestro {
            margin-right: 20px;
        }

        .navbar .btn-danger {
            margin-left: 40px;
            background-color: rgb(255, 0, 0) !important;
        }

        .btn-volver {
            position: fixed;
            top: 110px;
            left: 20px;
            font-size: 1rem;
            background-color: var(--color-morado);
            border: none;
            color: white;
            border-radius: 8px;
            cursor: pointer;
            padding: 0.5rem 1rem;
            z-index: 1000;
        }

        .btn-volver:hover {
            background-color: var(--color-rosa) !important;
            color: white;
        }

        .btn-volver i {
            margin-right: 8px;
        }
    </style>
    <script>
        const nombreCompleto = sessionStorage.getItem('profesorNombre');
        if (!nombreCompleto) {
            window.location.href = '/';
        }
    </script>
</head>

<body class="body-principal">
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">DisgraKids</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item d-flex align-items-center">
                        <h3 id="nombreMaestro" class="nav-link"></h3>
                    </li>
                    <li class="nav-item">
                        <img id="avatarMaestro" src="" alt="Avatar" class="rounded-circle" width="50" height="50">
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-danger" onclick="logout()">Cerrar Sesión</button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <button class="btn btn-volver" id="btn-volver">
        <i class="fas fa-arrow-left"></i> Menú
    </button>
    <div class="container mt-3 container-transparente">
        <h2 class="text-center mb-4 titulo">Listado de Alumnos</h2>
        <div id="alumnos-list" class="row">
            <!-- Aquí se mostrarán las tarjetas de los alumnos -->
        </div>
    </div>

    <script>
        const avatarUrl = sessionStorage.getItem('profesorAvatar');
        const colores = [
            'rgb(56,182,255, 0.7)', // Azul claro
            'rgb(149,253,17, 0.7)', // Verde
            'rgb(237,26,119, 0.7)', // Rosa
            'rgb(199,0,255, 0.7)', // Morado
            'rgb(255,167,16, 0.7)', // Naranja
            'rgb(253,215,0, 0.7)'   // Amarillo
        ];

        if (nombreCompleto) {
            const primerNombre = nombreCompleto.split(' ')[0];
            document.getElementById('nombreMaestro').textContent = primerNombre;
        }

        if (avatarUrl) {
            document.getElementById('avatarMaestro').src = avatarUrl;
        }

        document.getElementById('btn-volver').addEventListener('click', () => {
            window.location.href = '/principal';
        });

        async function logout() {
            try {
                const response = await fetch('/api/auth/logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    sessionStorage.clear();
                    window.location.href = '/';
                } else {
                    console.error('Error al cerrar sesión');
                }
            } catch (error) {
                console.error('Error de red en el cierre de sesión', error);
            }
        }

        async function obtenerAlumnos() {
            try {
                const response = await fetch('/api/profesores/alumnos');
                const data = await response.json();

                if (response.ok) {
                    mostrarAlumnos(data);
                } else {
                    console.error('Error al obtener los alumnos:', data.message);
                    alert('Error al obtener el listado de alumnos. Por favor, intenta de nuevo.');
                }
            } catch (error) {
                console.error('Error al comunicarse con el servidor:', error);
                alert('Hubo un problema al cargar los alumnos. Intenta nuevamente.');
            }
        }

        function mostrarAlumnos(alumnos) {
            const alumnosList = document.getElementById('alumnos-list');
            alumnosList.innerHTML = '';

            alumnos.forEach((alumno, index) => {
                const alumnoCol = document.createElement('div');
                alumnoCol.className = 'col-md-6 alumno-col';

                const alumnoCard = document.createElement('div');
                alumnoCard.className = 'alumno-card';

                const color = colores[index % colores.length];
                alumnoCard.style.backgroundColor = color;

                alumnoCard.innerHTML = `
                    <img src="${alumno.avatar || '/default-avatar.png'}" alt="Avatar" class="avatar-img">
                    <div class="alumno-info">
                        <h5>${alumno.nombreCompleto}</h5>
                        <p><strong>Código:</strong> ${alumno.codigo}</p>
                        <p><strong>Registrado el:</strong> ${new Date(alumno.createdAt).toLocaleDateString()}</p>
                        <p><strong>Promedio:</strong> ${alumno.promedio}</p>
                    </div>
                `;

                alumnoCol.appendChild(alumnoCard);
                alumnosList.appendChild(alumnoCol);
            });
        }

        obtenerAlumnos();
    </script>
</body>

</html>
