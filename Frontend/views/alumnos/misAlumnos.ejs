<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Alumnos</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
    <style>
        .body-principal {
            background-image: url('/assets/fondoPrincipal.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .titulo {
            font-size: 2rem;
            font-weight: bold;
        }

        .avatar-img {
            width: 70px;
            height: 70px;
            object-fit: cover;
            border-radius: 50%;
        }

        .alumno-card {
            padding: 1rem;
            border-radius: 8px;
            display: flex;
            align-items: center;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .alumno-info {
            margin-left: 1rem;
        }

        .container-transparente {
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 8px;
            padding: 2rem;
        }

        .alumno-col {
            margin-bottom: 1rem;
            padding: 0 0.5rem;
        }

        .navbar {
            height: 100px;
            font-size: 1.3rem;
            font-weight: bold;
            background-color: var(--color-morado) !important;
        }

        #nombreMaestro {
            margin-right: 20px;
        }

        .navbar .btn-danger {
            margin-left: 40px;
            background-color: rgb(255, 0, 0) !important;
        }

        .eliminar-btn{
            background-color: rgb(255, 0, 0) !important;
        }
        .eliminar-btn:hover{
            background-color: rgb(211, 59, 59) !important;
            color: white;
        }

        .btn-volver {
            position: fixed;
            top: 110px;
            left: 20px;
            font-size: 1rem;
            background-color: var(--color-morado);
            border: none;
            color: white;
            border-radius: 8px;
            cursor: pointer;
            padding: 0.5rem 1rem;
            z-index: 1000;
        }

        .btn-volver:hover {
            background-color: var(--color-rosa) !important;
            color: white;
        }

        .btn-volver i {
            margin-right: 8px;
        }
        .btn-check {
            background-color: var(--verde);
            color: white;
        }

        .btn-check:hover {
            background-color: #0a8a00;
        }

        .btn-delete {
            background-color: var(--rojo);
            color: white;
        }

        .btn-delete:hover {
            background-color: #a00000;
        }
    </style>
    <script>
        const nombreCompleto = sessionStorage.getItem('profesorNombre');
        if (!nombreCompleto) {
            window.location.href = '/';
        }
    </script>
</head>

<body class="body-principal">
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">DisgraKids</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item d-flex align-items-center">
                        <h3 id="nombreMaestro" class="nav-link"></h3>
                    </li>
                    <li class="nav-item">
                        <img id="avatarMaestro" src="" alt="Avatar" class="rounded-circle" width="50" height="50">
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-danger" onclick="logout()">Cerrar Sesión</button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <button class="btn btn-volver" id="btn-volver">
        <i class="fas fa-arrow-left"></i> Menú
    </button>
    <div class="container mt-3 container-transparente">
        <h2 class="text-center mb-4 titulo">Listado de Alumnos</h2>
        <div id="alumnos-list" class="row">
            <!-- Aquí se mostrarán las tarjetas de los alumnos -->
        </div>
    </div>

<!-- Modal de confirmación de eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">¿Deseas eliminar este alumno?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center" id="deleteModalBody">
                <p>Esta acción no se puede deshacer. ¿Estás seguro de que quieres continuar?</p>
                <div class="d-flex justify-content-around">
                    <div class="text-center">
                        <i class="fas fa-check-circle icono-confirmacion" id="confirmDelete"
                            style="font-size: 4rem; color: rgb(149,253,17); cursor: pointer;"></i>
                        <p>Eliminar</p>
                    </div>
                    <div class="text-center">
                        <i class="fas fa-times-circle icono-confirmacion" id="cancelDelete"
                            style="font-size: 4rem; color: rgb(255,34,34); cursor: pointer;"></i>
                        <p>Cancelar</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de resultado de eliminación -->
<div class="modal fade" id="resultModal" tabindex="-1" aria-labelledby="resultModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="resultModalLabel">Resultado de la operación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <i id="resultIcon" class="fas mb-3" style="font-size: 4rem;"></i>
                <p id="resultMessage"></p>
            </div>
        </div>
    </div>
</div>

    <script>
        const avatarUrl = sessionStorage.getItem('profesorAvatar');
        let alumnoIdEliminar = null;
        const colores = [
            'rgb(56,182,255, 0.7)', // Azul claro
            'rgb(149,253,17, 0.7)', // Verde
            'rgb(237,26,119, 0.7)', // Rosa
            'rgb(199,0,255, 0.7)', // Morado
            'rgb(255,167,16, 0.7)', // Naranja
            'rgb(253,215,0, 0.7)'   // Amarillo
        ];

        if (nombreCompleto) {
            const primerNombre = nombreCompleto.split(' ')[0];
            document.getElementById('nombreMaestro').textContent = primerNombre;
        }

        if (avatarUrl) {
            document.getElementById('avatarMaestro').src = avatarUrl;
        }

        document.getElementById('btn-volver').addEventListener('click', () => {
            window.location.href = '/principal';
        });

        async function logout() {
            try {
                const response = await fetch('/api/auth/logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    sessionStorage.clear();
                    window.location.href = '/';
                } else {
                    console.error('Error al cerrar sesión');
                }
            } catch (error) {
                console.error('Error de red en el cierre de sesión', error);
            }
        }

        async function obtenerAlumnos() {
            try {
                const response = await fetch('/api/profesores/alumnos');
                const data = await response.json();

                if (response.ok) {
                    mostrarAlumnos(data);
                } else {
                    console.error('Error al obtener los alumnos:', data.message);
                    alert('Error al obtener el listado de alumnos. Por favor, intenta de nuevo.');
                }
            } catch (error) {
                console.error('Error al comunicarse con el servidor:', error);
                alert('Hubo un problema al cargar los alumnos. Intenta nuevamente.');
            }
        }

        function mostrarAlumnos(alumnos) {
            const alumnosList = document.getElementById('alumnos-list');
            alumnosList.innerHTML = '';
            console.log(alumnos);
            alumnos.forEach((alumno, index) => {
                const alumnoCol = document.createElement('div');
                alumnoCol.className = 'col-md-6 alumno-col';

                const alumnoCard = document.createElement('div');
                alumnoCard.className = 'alumno-card';

                const color = colores[index % colores.length];
                alumnoCard.style.backgroundColor = color;

                alumnoCard.innerHTML = `
            <img src="${alumno.avatar || '/default-avatar.png'}" alt="Avatar" class="avatar-img">
            <div class="alumno-info">
              <h5>${alumno.nombreCompleto}</h5>
                 <p><strong>Código:</strong> ${alumno.codigo}</p>
                <p><strong>Registrado el:</strong> ${new Date(alumno.createdAt).toLocaleDateString()}</p>
                <p><strong>Promedio:</strong> ${alumno.promedio}</p>
                <button class="btn eliminar-btn" onclick="mostrarModalEliminar('${alumno._id}')">Eliminar</button>
            </div>
            `;

                alumnoCol.appendChild(alumnoCard);
                alumnosList.appendChild(alumnoCol);
            });
        }

        function mostrarModalEliminar(id) {
            alumnoIdEliminar = id;
            $('#deleteModal').modal('show');
        }

        document.getElementById('confirmDelete').addEventListener('click', async function () {
        if (alumnoIdEliminar) {
            try {
                const response = await fetch(`/api/alumnos/${alumnoIdEliminar}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                $('#deleteModal').modal('hide'); // Ocultar modal de confirmación

                if (response.ok) {
                    // Mostrar resultado exitoso
                    mostrarResultado('Alumno eliminado exitosamente', 'fas fa-check-circle', 'rgb(149,253,17)');
                    // Eliminar la tarjeta del DOM si la eliminación fue exitosa
                    const alumnoCard = document.querySelector(`button[onclick="mostrarModalEliminar('${alumnoIdEliminar}')"]`).closest('.alumno-col');
                    if (alumnoCard) {
                        alumnoCard.remove();
                    }
                } else {
                    const data = await response.json();
                    mostrarResultado(`Error al eliminar el alumno: ${data.message}`, 'fas fa-times-circle', 'rgb(255,34,34)');
                }
            } catch (error) {
                mostrarResultado('Hubo un problema al conectar con la API', 'fas fa-times-circle', 'rgb(255,34,34)');
                console.error('Error:', error);
            }
        }
    });

    document.getElementById('cancelDelete').addEventListener('click', function () {
        $('#deleteModal').modal('hide');
    });
    function mostrarResultado(mensaje, iconoClase, color) {
        // Configurar el ícono y el mensaje en el modal de resultado
        const resultIcon = document.getElementById('resultIcon');
        const resultMessage = document.getElementById('resultMessage');

        resultIcon.className = iconoClase;
        resultIcon.style.color = color;
        resultMessage.textContent = mensaje;

        // Mostrar el modal de resultado
        $('#resultModal').modal('show');
    }

        obtenerAlumnos();
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</body>

</html>